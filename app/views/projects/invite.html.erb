<div class="container">
    <%=link_to "Back to #{@project.title} Directory", project_path(@project) %> <br>
    <h1>Invite Collaborators</h1>

    <div class="search">
        <%=form_tag project_invite_search_path do %>
            Search: <%=text_field_tag "search"%>
            <%=submit_tag "Apply Search"%>
        <%end%>
    </div>

    <%if @users.length > 0%>
        <ol>
        <%@users.each do |user| %>
            <li> <%=link_to user.username, "/projects/#{@project.id}/invite/user/#{user.id}"%></li>
        <%end%>
        </ol>
    <%end%>
</div>
